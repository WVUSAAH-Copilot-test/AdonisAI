# =============================================================================
# AdonisAI Environment Configuration
# =============================================================================
# Kopiere diese Datei zu .env und fülle die Werte aus
# WICHTIG: .env niemals in Git committen!

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Erstelle einen Bot über @BotFather in Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# -----------------------------------------------------------------------------
# AI Provider Configuration
# -----------------------------------------------------------------------------
# Hugging Face API Token (kostenlos: https://huggingface.co/settings/tokens)
HF_API_TOKEN=your_huggingface_token_here

# OpenRouter API Key (optional, kostenfreies Kontingent: https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_key_here

# Bevorzugter AI Provider: "huggingface" oder "openrouter"
AI_PROVIDER=huggingface

# Standard-Modell für Textgenerierung
AI_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# -----------------------------------------------------------------------------
# Google Calendar Configuration
# -----------------------------------------------------------------------------
# OAuth 2.0 Client ID aus Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here

# OAuth 2.0 Client Secret
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Pfad zur credentials.json (default: ./credentials.json)
GOOGLE_CREDENTIALS_PATH=./credentials.json

# -----------------------------------------------------------------------------
# Speech Configuration
# -----------------------------------------------------------------------------
# Speech-to-Text Provider: "vosk" oder "whisper"
STT_PROVIDER=vosk

# Text-to-Speech Provider: "gtts" oder "coqui"
TTS_PROVIDER=gtts

# Sprache für TTS (z.B. "de" für Deutsch, "en" für Englisch)
TTS_LANGUAGE=de

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Pfad zur SQLite Datenbank
DATABASE_PATH=./data/adonisai.db

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log-Datei Pfad (leer lassen für Console-only)
LOG_FILE=./logs/adonisai.log

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Zeitzone (z.B. "Europe/Berlin", "America/New_York")
TIMEZONE=Europe/Berlin

# Debug Mode (true/false)
DEBUG_MODE=false
